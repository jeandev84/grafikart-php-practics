{% extends 'layout.twig' %}

{% block title post.name %}

{% block body %}

 <h1>{{ post.name }}</h1>

 <p class="text-muted">
  {% if post.categoryId %}
    <a href="{{ path('blog.category', {slug: post.categorySlug}) }}" title="{{ post.categoryName }}">
     {{ post.category_name }}
    </a>
  {% endif %}
  {{ post.createdAt | ago }}
 </p>

 {{ post.content | nl2br }}

{% endblock %}