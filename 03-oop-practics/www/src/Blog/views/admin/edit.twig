{% extends '@admin/layout.twig' %}

{% block title "Editer l' article" %}

{% block body %}

    <h1>Editer l' article {{ item.name }}</h1>

    <form action="{{ path('blog.admin.edit', {'id': item.id}) }}" method="post">
        <div class="form-group">
            <label for="name">Titre de l' article</label>
            <input type="text" class="form-control" name="name" id="name" value="{{ item.name }}">
        </div>
        <div class="form-group">
            <label for="slug">SLug</label>
            <input type="text" class="form-control" name="slug" id="slug" value="{{ item.slug }}">
        </div>
        <div class="form-group">
            <label for="content">Contenu</label>
            <textarea name="content" id="content" rows="10" class="form-control">{{ item.content }}</textarea>
        </div>
        <button class="btn btn-primary" type="submit">Editer</button>
    </form>

{% endblock %}