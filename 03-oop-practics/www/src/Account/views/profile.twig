{% extends 'layout.twig' %}


{% block body %}

    <h1>Mon compte</h1>

     <form action="" method="post">
         {{ csrf_input() }}
         {{ field('firstname', user.firstname, "Prenom") }}
         {{ field('lastname', user.lastname, "Nom") }}
         {{ field('password', null, "Mot de passe", {type: 'password'}) }}
         {{ field('password_confirm', null, "Confirmez le mot de passe", {type: 'password'}) }}
        <button class="btn btn-primary" type="submit">Modifier mes informations</button>
     </form>

{% endblock %}